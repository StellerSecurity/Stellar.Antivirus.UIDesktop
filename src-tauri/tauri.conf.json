{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Stellar Antivirus",
  "version": "0.1.0",
  "identifier": "stellar.antivirus.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Stellar Antivirus",
        "width": 1200,
        "height": 720,
        "resizable": false,
        "fullscreen": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
